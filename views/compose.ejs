<h1><b>Compose</b></h1>
<br>

<form action="/compose" method="post">
  <div class="form-group">
   <label for="">Title</label>
   <input type="text" class="form-control" name="postTitle"  placeholder="Blog Title">
  </div>

  <div class="form-group">
   <label for="">Post</label>
   <textarea class="form-control" rows="5" placeholder="Blog Content" name="postBody"></textarea>
 </div>

  <button class="btn btn-success " type="submit" name="button">Publish</button>
</form>

